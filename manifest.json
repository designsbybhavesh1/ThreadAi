{
  "manifest_version": 3,
  "name": "ThreadAi",
  "version": "1.0.0",
  "description": "AI-powered thread summarization with humanized replies. Experience the power of Chrome's built-in AI.",
  "icons": {
    "16": "public/icons/icon16.png",
    "48": "public/icons/icon48.png",
    "128": "public/icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "notifications",
    "contextMenus"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://www.reddit.com/*",
    "https://www.linkedin.com/*",
    "https://lemon-worker.bhaveshlalvani000.workers.dev/*",
    "https://thread-ai.lemonsqueezy.com/*"
  ],
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*",
        "https://www.reddit.com/*",
        "https://www.linkedin.com/*"
      ],
      "js": [
        "src/content/content.js"
      ],
      "css": [
        "src/content/content.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "public/popup/popup.html",
    "default_icon": {
      "16": "public/icons/icon16.png",
      "48": "public/icons/icon48.png",
      "128": "public/icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "public/settings/settings.html",
        "public/success.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "minimum_chrome_version": "127"
}